<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.userName %></p>
<a href="/users/logout" class="btn btn-secondary">Logout</a>

<form action="/users/upload" method="post" enctype="multipart/form-data">
    comment: <input id="comment" type="textarea" name="comment"><br>
    Your image: <input type="file" name="image"><br>
    <input type="hidden" name="userName" value="<%= user.userName %>"></input>
    <input type="hidden" name="id" value="<%= user.id %>"></input>
    <button type="submit" value="Submit">Upload</button>
</form>

<header>
    <nav class="navbar navbar-light bg-primary">
            <nav class="navbar navbar-light bg-light">
                    <a class="navbar-brand" href="#">
                            <img src="/docs/4.3/assets/brand/bootstrap-solid.svg" width="30" height="30"
                                    class="d-inline-block align-top" alt="">
                            LOGO/NAME
                    </a>

            </nav>
            
            <ul class="nav justify-content-end">
                    <li class="nav-item">
                            <button class="btn btn-success" id="log" type="button">LOGIN</button>
                            <button class="btn btn-success" id="register" type="button">SIGN-UP</button>
    </nav>
</header>

<div class="jumbotron" id="jumboImage">
    <div>
            <h1 class="display-4">Hello, world!</h1>
            <img src="#" alt="#">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#uploadModal">
                            Upload new image
                          </button>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="uploadModal">
    <div class="modal-dialog" role="document">
            <div class="modal-content">
                    <div class="modal-header">
                            <h5 class="modal-title">Upload an Image</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <div class="modal-body">
                            <p>Modal body text goes here.</p>
                    </div>
                    <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Upload</button>
                    </div>
            </div>
    </div>
</div>

