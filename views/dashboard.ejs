<header>
  <nav class="navbar">
    <nav class="navbar">
      <a class="navbar-brand" href="/explore">
        <i class="fa fa-paw" aria-hidden="true"></i>
        FURiends
      </a>
    </nav>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a href="/explore" class="btn btn-succes" id="log">Explore</a>
        <a href="/users/logout" class="btn btn-success" id="log">Logout</a>
      </li>
    </ul>
  </nav>
  <div class="clear"></div>
</header>


<div container>
  <div class="jumbotron" id=userInfo>
    <div>
      <h1 class="display-4" id="othersName"> Hello <%= user.userName %>!</h1>
      <div id=></div>
      <div id=wrapper>
        <p id="userSpecies">Sphinx</p>
        <p id="userBreed">cat</p>
        <p id="userLocation">Orlando</p>

        <button type="button" id="updateButton" class="btn btn-primary" data-toggle="modal" data-target="#uploadModal">
          Upload new image
        </button>
      </div>
    </div>
  </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="uploadModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Upload an Image</h5>

          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/api/upload" method="post" enctype="multipart/form-data">
            comment: <input id="comment" type="textarea" name="comment"><br>
            Your image: <input type="file" name="image"><br>
            <input type="hidden" name="userName" value="<%= user.userName %>"></input>
            <input type="hidden" name="id" value="<%= user.id %>"></input>
            <button type="submit" value="Submit">Upload</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

<div class="container">
  <div id="container">
  </div>
</div>

